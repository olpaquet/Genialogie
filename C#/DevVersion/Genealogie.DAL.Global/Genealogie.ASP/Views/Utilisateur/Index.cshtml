@model IEnumerable<Genealogie.ASP.Models.UtilisateurIndex>

@{
    ViewBag.Title = "Liste des utilisateurs";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Créer un nouvel utilisateur", "Creer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actif)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actif)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Modifier", new { id = item.id }) |
            @Html.ActionLink("Détails", "Details", new { id = item.id }) |
            @Html.ActionLink("Supprimer", "Supprimer", new { id = item.id })
            @if (item.actif)
            {@Html.ActionLink("Désactiver", "Desactiver", new { id = item.id })}
        else
        {@Html.ActionLink("Activer", "Activer", new { id = item.id })}
        </td>
    </tr>
}

</table>
